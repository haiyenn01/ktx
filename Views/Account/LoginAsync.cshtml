@model PlurasightLogin.Controllers.LoginModel

<h1>Login</h1>
<hr />
@using (Html.BeginForm("LoginAsync", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.LabelFor(x => x.Username) @Html.TextAreaFor(x => x.Username)
    <br />
    @Html.LabelFor(x => x.Password) @Html.TextAreaFor(x => x.Password)

    <br />
    <input class="btn" type="submit" value="Login" />
}
@Html.ActionLink("Forgot Password ?", "ForgotPassword")